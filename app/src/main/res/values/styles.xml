<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="customBlackProgressBar" parent="android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_black</item>
    </style>

    <style name="schedule_appointed">
        <item name="android:colorBackground">#ff5e45</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="schedule_can_not_appoint">
        <item name="android:colorBackground">#eeeeee</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="schedule_select_all">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="schedule_available">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@animator/zoom_from_left_corner_right_in</item>
        <item name="android:windowExitAnimation">@animator/zoom_from_left_corner_right_out</item>
    </style>
</resources>

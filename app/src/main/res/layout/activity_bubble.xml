<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.demo.imageview.BubbleImageView
        android:id="@+id/id1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/tu"
        app:bubble_angle="6dp"
        app:bubble_arrowHeight="50dp"
        app:bubble_arrowLocation="right"
        app:bubble_arrowOffset="5dp"
        app:bubble_arrowTop="50dp"
        app:bubble_arrowWidth="30dp" />

    <com.demo.imageview.BubbleImageView
        android:id="@+id/id2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/id1"
        android:layout_centerInParent="true"
        android:src="@drawable/tu"
        app:bubble_angle="6dp"
        app:bubble_arrowHeight="50dp"
        app:bubble_arrowLocation="left"
        app:bubble_arrowOffset="5dp"
        app:bubble_arrowTop="50dp"
        app:bubble_arrowWidth="30dp" />
</RelativeLayout>